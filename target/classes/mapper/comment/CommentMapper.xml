<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pcwk.ehr.mapper.CommentMapper">

  <resultMap id="commentMap" type="com.pcwk.ehr.comment.domain.CommentVO">
    <id column="comment_sid" property="commentSid"/>
    <result column="comment_content" property="commentContent"/>
    <result column="comment_reccount" property="commentReccount"/>
    <result column="comment_updatedate" property="commentUpdateDate"/>
    <result column="diary_sid" property="diarySid"/>
    <result column="famous_sid" property="famousSid"/>
    <result column="reg_id" property="regId"/>
  </resultMap>

  <!-- 댓글 목록 -->
  <select id="getListByDiarySid" resultMap="commentMap">
    SELECT
      comment_sid,
      comment_content,
      comment_reccount,
      comment_updatedate,
      diary_sid,
      famous_sid,
      reg_id
    FROM comments
    WHERE diary_sid = #{diarySid}
    ORDER BY comment_sid DESC
  </select>

  <!-- 댓글 등록 -->
  <insert id="doSave" parameterType="com.pcwk.ehr.comment.domain.CommentVO">
    INSERT INTO comments (
      comment_sid,
      comment_content,
      comment_reccount,
      comment_updatedate,
      diary_sid,
      famous_sid,
      reg_id
    ) VALUES (
      seq_comments.NEXTVAL,
      #{commentContent},
      0,
      SYSDATE,
      #{diarySid},
      NULL,
      #{regId}
    )
  </insert>

</mapper>
